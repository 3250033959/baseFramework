<resources>

    <style name="AppBaseTheme" parent="Theme.MaterialDesignTheme">
        <!--
        android:Theme.Light.NoTitleBar
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.MaterialDesignTheme" parent="Theme.AppCompat.Light">
        <!-- customize the color palette -->
        <!--ActionBar Color-->
        <item name="colorPrimary">@color/basecolor</item>
        <!-- 导航栏 Color -->
        <item name="colorPrimaryDark">@color/basecolor</item>
        <!-- 单选按钮等颜色-->
        <item name="colorAccent">@color/basecolor</item>
    </style>

    <style name="NoBackgroundTheme" parent="Theme.MaterialDesignTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- 加载圈 -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

