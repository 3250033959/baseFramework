<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_showtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <TextView
        android:id="@+id/tv_h5"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入h5activity" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入登录页面" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        fresco:roundedCornerRadius="5dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="0"
        fresco:placeholderImage="@drawable/bg_notus"
        fresco:placeholderImageScaleType="fitXY"
        fresco:failureImage="@drawable/bg_notus"
        fresco:failureImageScaleType="fitXY"
        fresco:retryImage="@drawable/bg_notus"
        fresco:retryImageScaleType="fitXY"
        fresco:progressBarImage="@drawable/bg_notus"
        fresco:progressBarImageScaleType="fitXY"
        />
</LinearLayout>
